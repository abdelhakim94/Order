@namespace Order.Client.Components.Form

<div @attributes=@AdditionalAttributes class="@ComponentContainer @CssClass">

    <InputText type=@ShouldHideValue() placeholder=@PlaceHolder Value=@Value @oninput=@HandleInputChange
        ValueExpression=@(() => Value) />

    <img src=@GetIcon() hidden=@(!IsSensitiveInput) @onclick=@ToggleIsHiddenValue />

</div>
