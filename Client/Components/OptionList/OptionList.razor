@using Order.Shared.Dto.Dish

@namespace Order.Client.Components

<EditForm Model=new()>
    @foreach (var option in Options ?? new())
    {
        <OptionListItem @key=@option?.Id Option=@option OnSelect=@OnSelect OnUnselect=@OnUnselect />
    }
</EditForm>

@code {
    [Parameter]
    public List<OptionDetailsDto> Options { get; set; }

    [Parameter]
    public EventCallback<int> OnSelect { get; set; }

    [Parameter]
    public EventCallback<int> OnUnselect { get; set; }

    protected override bool ShouldRender()
    {
        return false;
    }
}
