@page "/ResetPassword/{UserEmail}/{*ResetPasswordToken}"

@using Order.Client.Components.Form
@using Order.Client.Components.Misc

@namespace Order.Client.Pages

<EditForm Model=@PasswordReset OnValidSubmit=@HandleFormSubmition @onclick=@(() => NotificationModal.Close())>

    <ObjectGraphDataAnnotationsValidator />

    <div class="form-container @disabled">

        <div>
            <OInputText IsSensitiveInput=@true CssClass="form-input first-input" PlaceHolder=@M.Password
                @bind-Value=@PasswordReset.Password />
            <ValidationMessage For=@( () => PasswordReset.Password) />
        </div>

        <div>
            <OInputText IsSensitiveInput=@true CssClass="form-input" PlaceHolder=@M.ConfirmPassword
                @bind-Value=@PasswordReset.ConfirmPassword />
            <ValidationMessage For=@( () => PasswordReset.ConfirmPassword ) />
        </div>

        <Button CssClass="form-submit" Type="submit" Label=@M.Reset />

        <div class="redirection">
            @M.ComeBackTo <a href="/" class="redirect">@M.SignInPage</a>
        </div>

    </div>

</EditForm>
