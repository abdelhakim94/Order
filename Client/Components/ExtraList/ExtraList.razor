@using Order.Shared.Dto.Dish

@namespace Order.Client.Components

<EditForm Model=new()>
    @foreach (var extra in Extras ?? new())
    {
        <ExtraListItem @key=@extra?.Id Extra=@extra OnSelect=@OnSelect OnUnselect=@OnUnselect />
    }
</EditForm>

@code {
    [Parameter]
    public List<ExtraDetailsDto> Extras { get; set; }

    [Parameter]
    public EventCallback<int> OnSelect { get; set; }

    [Parameter]
    public EventCallback<int> OnUnselect { get; set; }

    protected override bool ShouldRender()
    {
        return false;
    }
}
