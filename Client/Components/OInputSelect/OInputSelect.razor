@namespace Order.Client.Components

<div @attributes=@AdditionalAttributes class="@ComponentContainer @CssClass">
    <InputSelect placeholder=@PlaceHolder Value=@Value @oninput=HandleInputChange ValueExpression=@(() => Value)>
        @foreach (var option in Options)
        {
            <option value=@option.Id>@option.Value</option>
        }
    </InputSelect>
</div>
